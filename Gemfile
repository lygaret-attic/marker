source 'http://rubygems.org'

gem 'rails', '3.0.8'
gem 'sqlite3-ruby', '1.3.2', :require => 'sqlite3'
gem 'devise'

group :development, :test do
    # To use debugger
    gem 'ruby-debug19', :require => 'ruby-debug'
end

group :development do
    gem 'rspec-rails'
end

group :test do
    gem 'ZenTest'
    gem 'autotest'
    gem 'autotest-growl'
    gem 'autotest-fsevent'
    gem 'rspec'
    gem 'cucumber'
    gem 'webrat'
end
